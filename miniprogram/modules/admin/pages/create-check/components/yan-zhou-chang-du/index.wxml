<view class="eye-form-label">眼轴长度</view>
<view class="eye-form-content-scroll">
    <view class="{{['eye-form-content', position]}}">
        <view class="eye-form-content-item">
            <view class="eye-form-input">
                <number-input
                    model:value="{{right}}"
                    fixed="2"
                />
                <view class="unit">mm</view>
            </view>
        </view>
        <view class="eye-form-content-item">
            <view class="eye-form-input">
                <number-input
                    model:value="{{left}}"
                    fixed="2"
                />
                <view class="unit">mm</view>
            </view>
        </view>
    </view>
</view>
